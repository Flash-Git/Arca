{
  "name": "arca",
  "version": "1.0.0",
  "description": "Escrowless Ethereum trading application",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client; yarn; cd ..",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client; yarn start; cd ..",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "dev-update": "yarn upgrade; cd client; yarn upgrade; cd ..",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flash-Git/Arca.git"
  },
  "author": "Flash",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^4.1.2",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "nodemon": "^1.19.2"
  },
  "bugs": {
    "url": "https://github.com/Flash-Git/Arca/issues"
  },
  "homepage": "https://github.com/Flash-Git/Arca#readme"
}
