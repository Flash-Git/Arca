{
  "name": "arca",
  "version": "1.0.0",
  "description": "Escrowless Ethereum trading application",
  "main": "server.ts",
  "scripts": {
    "start": "NODE_ENV=production node build/index.js",
    "server": "nodemon index.ts",
    "serverInstall": "yarn",
    "serverBuild": "npx tsc",
    "client": "yarn --cwd ./client start",
    "clientInstall": "yarn --cwd ./client/",
    "clientBuild": "yarn --cwd ./client/ build",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "devInstall": "yarn serverInstall && yarn clientInstall",
    "devUpgrade": "yarn upgrade && yarn --cwd ./client/ upgrade",
    "devBuild": "yarn serverBuild && yarn clientBuild",
    "heroku-postbuild": "yarn devInstall && yarn devBuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flash-Git/Arca.git"
  },
  "author": "Flash",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.9",
    "express": "^4.17.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  },
  "bugs": {
    "url": "https://github.com/Flash-Git/Arca/issues"
  },
  "homepage": "https://etharca.com/"
}
