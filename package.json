{
  "name": "arca",
  "version": "1.0.0",
  "description": "Escrowless Ethereum trading application",
  "main": "server.ts",
  "scripts": {
    "server-install": "yarn",
    "client-install": "cd client; yarn; cd ..",
    "full-install": "yarn server-install; yarn client-install",
    "server-upgrade": "yarn upgrade",
    "client-upgrade": "cd client; yarn upgrade; cd ..",
    "full-upgrade": "yarn server-upgrade; yarn client-upgrade",
    "start": "node server.js",
    "server": "nodemon server.ts",
    "client": "cd client; yarn start; cd ..",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "client-build": "cd client; yarn build; cd ..",
    "heroku-postbuild": "yarn client-build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flash-Git/Arca.git"
  },
  "author": "Flash",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.9",
    "express": "^4.17.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.2"
  },
  "bugs": {
    "url": "https://github.com/Flash-Git/Arca/issues"
  },
  "homepage": "https://etharca.com/"
}
